<%= turbo_stream.replace "dashboard-stats", partial: "dashboard_stats" %>
<%= turbo_stream.replace @product do %>
  <%= render @product %>
<% end %>
<% if @result.message.present? %>
  <%= turbo_stream.prepend "flash" do %>
    <%= render "layouts/flash_message", message: @result.message, type: @result.success? ? :notice : :alert %>
  <% end %>
<% end %>
