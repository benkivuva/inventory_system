<%= form_with(model: product, class: "contents") do |form| %>
  <tr class="bg-slate-800 border-b border-indigo-500/30">
    <td class="px-6 py-4" colspan="4">
      <div class="flex flex-wrap items-end gap-4 p-2">
        <div class="flex-1 min-w-[200px]">
          <%= form.label :name, class: "block text-xs font-semibold text-slate-400 uppercase tracking-wider mb-1" %>
          <%= form.text_field :name, class: "block w-full rounded-lg border-slate-600 bg-slate-900 text-white text-sm focus:border-indigo-500 focus:ring-indigo-500" %>
        </div>

        <div class="flex-1 min-w-[250px]">
          <%= form.label :description, class: "block text-xs font-semibold text-slate-400 uppercase tracking-wider mb-1" %>
          <%= form.text_field :description, class: "block w-full rounded-lg border-slate-600 bg-slate-900 text-white text-sm focus:border-indigo-500 focus:ring-indigo-500" %>
        </div>

        <div class="w-32">
          <%= form.label :price, class: "block text-xs font-semibold text-slate-400 uppercase tracking-wider mb-1" %>
          <%= form.number_field :price, step: 0.01, class: "block w-full rounded-lg border-slate-600 bg-slate-900 text-white text-sm focus:border-indigo-500 focus:ring-indigo-500" %>
        </div>

        <div class="w-24">
          <%= form.label :quantity, class: "block text-xs font-semibold text-slate-400 uppercase tracking-wider mb-1" %>
          <%= form.number_field :quantity, class: "block w-full rounded-lg border-slate-600 bg-slate-900 text-white text-sm focus:border-indigo-500 focus:ring-indigo-500" %>
        </div>

        <div class="w-24">
          <%= form.label :threshold, "Low Stock", class: "block text-xs font-semibold text-slate-400 uppercase tracking-wider mb-1" %>
          <%= form.number_field :low_stock_threshold, class: "block w-full rounded-lg border-slate-600 bg-slate-900 text-white text-sm focus:border-indigo-500 focus:ring-indigo-500" %>
        </div>

        <div class="flex-1 min-w-[200px]">
          <%= form.label :image, class: "block text-xs font-semibold text-slate-400 uppercase tracking-wider mb-1" %>
          <%= form.file_field :image, class: "block w-full text-sm text-slate-400 file:mr-4 file:py-2 file:px-4 file:rounded-lg file:border-0 file:text-sm file:font-semibold file:bg-slate-700 file:text-white hover:file:bg-slate-600 cursor-pointer" %>
        </div>

        <div class="flex items-center gap-2">
          <%= form.submit "Save", class: "px-4 py-2 bg-indigo-600 text-white text-sm font-semibold rounded-lg hover:bg-indigo-500 cursor-pointer shadow-lg shadow-indigo-900/30 transition-all" %>
          <%= link_to "Cancel", products_path, class: "px-4 py-2 text-slate-400 text-sm font-medium hover:text-white transition-colors" %>
        </div>
      </div>

      <% if product.errors.any? %>
        <div id="error_explanation" class="mt-2 px-2 text-rose-400 text-xs font-medium">
          <ul>
            <% product.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>
    </td>
  </tr>
<% end %>
