<div class="max-w-4xl mx-auto mt-16 p-8 bg-slate-800 rounded-2xl shadow-xl border border-slate-700">
  <div class="flex items-center justify-between mb-8">
    <h1 class="text-3xl font-bold text-white"><%= @product.name %></h1>
    <%= link_to products_path, class: "text-slate-400 hover:text-white transition-colors flex items-center gap-2" do %>
      <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"/></svg>
      Back to Inventory
    <% end %>
  </div>

  <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
    <div class="space-y-6">
      <% if @product.image.attached? %>
        <%= image_tag @product.image, class: "w-full rounded-xl shadow-lg border border-slate-600" %>
      <% else %>
        <div class="w-full aspect-video bg-slate-700 rounded-xl flex items-center justify-center text-slate-500 border border-slate-600">
          <svg class="w-16 h-16 opacity-50" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"/></svg>
        </div>
      <% end %>
    </div>

    <div class="space-y-8">
      <div class="bg-slate-900/50 p-6 rounded-xl border border-slate-700/50">
        <h2 class="text-slate-400 text-sm font-semibold uppercase tracking-wider mb-4">Product Details</h2>
        <dl class="space-y-4">
          <div class="flex justify-between border-b border-slate-700/50 pb-2">
            <dt class="text-slate-400">Price</dt>
            <dd class="text-white font-mono font-medium"><%= number_to_currency(@product.price) %></dd>
          </div>
          <div class="flex justify-between border-b border-slate-700/50 pb-2">
            <dt class="text-slate-400">Stock Level</dt>
            <dd class="text-white font-mono font-medium"><%= @product.quantity %></dd>
          </div>
          <div class="pt-2">
            <dt class="text-slate-400 mb-1">Description</dt>
            <dd class="text-slate-300 text-sm leading-relaxed"><%= @product.description %></dd>
          </div>
        </dl>
      </div>

      <div class="flex gap-4">
        <%= link_to edit_product_path(@product), class: "flex-1 py-3 px-4 bg-indigo-600 hover:bg-indigo-500 text-white font-medium rounded-xl text-center transition-all shadow-lg shadow-indigo-900/20", data: { turbo_frame: "modal" } do %>
          Edit Product
        <% end %>
        <%= link_to history_product_path(@product), class: "flex-1 py-3 px-4 bg-slate-700 hover:bg-slate-600 text-white font-medium rounded-xl text-center transition-all border border-slate-600", data: { turbo_frame: "modal" } do %>
          View History
        <% end %>
      </div>
    </div>
  </div>
</div>
