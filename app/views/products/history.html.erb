<%= turbo_frame_tag "modal" do %>
  <div class="fixed inset-0 z-50 flex items-center justify-center p-4 bg-slate-950/80 backdrop-blur-sm transition-all duration-300 animate-in fade-in"
       data-controller="modal"
       data-action="keydown.esc@window->modal#onKeyDown">
    <div class="bg-slate-800 w-full max-w-md rounded-2xl shadow-2xl border border-slate-700 transform transition-all animate-in zoom-in-95 duration-300 flex flex-col max-h-[80vh]">
      <div class="flex items-center justify-between p-6 border-b border-slate-700/50">
        <h2 class="text-xl font-bold text-white tracking-tight">History: <%= @product.name %></h2>
        <button type="button" data-action="click->modal#close" class="text-slate-500 hover:text-white transition-colors">
          <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/></svg>
        </button>
      </div>
      
      <div class="px-6 py-2 bg-slate-900/50 border-b border-slate-700/50 text-xs text-slate-400 text-center uppercase tracking-wider font-semibold">
        Showing last 50 activities
      </div>
      
      <div class="p-6 overflow-y-auto">
        <% if @product.stock_movements.any? %>
          <div class="relative pl-4 border-l-2 border-slate-700 space-y-8">
            <% @product.stock_movements.order(created_at: :desc).limit(50).each do |movement| %>
              <div class="relative">
                <div class="absolute -left-[21px] top-1 w-3 h-3 rounded-full border-2 border-slate-800 <%= movement.amount.positive? ? 'bg-emerald-500' : 'bg-rose-500' %>"></div>
                <div class="flex flex-col sm:flex-row sm:justify-between sm:items-baseline gap-1">
                  <span class="text-slate-200 font-medium text-lg">
                    <%= movement.notes %>
                  </span>
                  <span class="text-slate-500 text-xs font-mono">
                    <%= movement.created_at.strftime("%b %d, %I:%M %p") %>
                  </span>
                </div>
                <div class="mt-1 flex items-center gap-2">
                  <span class="inline-flex items-center px-2 py-0.5 rounded text-xs font-bold <%= movement.amount.positive? ? 'bg-emerald-500/10 text-emerald-400' : 'bg-rose-500/10 text-rose-400' %>">
                    <%= movement.amount.positive? ? "+" : "" %><%= movement.amount %>
                  </span>
                </div>
              </div>
            <% end %>
          </div>
        <% else %>
          <div class="text-center py-8 text-slate-500">
            <svg class="w-12 h-12 mx-auto mb-3 opacity-50" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/></svg>
            <p>No stock movements recorded yet.</p>
          </div>
        <% end %>
      </div>
    </div>
  </div>
<% end %>
