<div id="flash" class="fixed top-4 right-4 z-50 pointer-events-none space-y-2">
  <% flash.each do |type, message| %>
    <div data-controller="flash" class="px-4 py-3 rounded-lg shadow-lg border text-white font-medium flex items-center gap-3 animate-fade-in-down pointer-events-auto
      <%= type == 'notice' ? 'bg-emerald-500 border-emerald-600' : 'bg-rose-500 border-rose-600' %>">
      <span><%= message %></span>
    </div>
  <% end %>
  <% if local_assigns[:message] %>
    <div data-controller="flash" class="px-4 py-3 rounded-lg shadow-lg border text-white font-medium flex items-center gap-3 animate-fade-in-down pointer-events-auto bg-emerald-500 border-emerald-600">
      <span><%= message %></span>
    </div>
  <% end %>
</div>
